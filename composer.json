{
    "name": "usamamuneerchaudhary/commentify",
    "description": "Easy Laravel Livewire Comments with TailwindCSS UI",
    "keywords": [
        "usamamuneerchaudhary",
        "laravel-livewire",
        "livewire",
        "comments",
        "commentify",
        "livewire-comments"
    ],
    "license": "MIT",
    "type": "library",
    "authors": [
        {
            "name": "Usama Muneer",
            "email": "hello@usamamuneer.me",
            "role": "Developer"
        }
    ],
    "autoload": {
        "psr-4": {
            "Usamamuneerchaudhary\\Commentify\\": "src",
            "Usamamuneerchaudhary\\Commentify\\Database\\Factories\\": "database/factories"
        }
    },
    "require": {
        "php": "^8.3",
        "illuminate/database": "^12.0",
        "illuminate/support": "^12.0",
        "livewire/livewire": "^3.0",
        "livewire/flux": "^2.9",
        "laravel/framework": "^12.0",
        "guzzlehttp/guzzle": "^7.9"
    },
    "suggest": {
        "filament/filament": "^4.0 - Required for Filament admin panel integration"
    },
    "require-dev": {
        "orchestra/testbench": "^10.0",
        "phpunit/phpunit": "^11.0"
    },
    "autoload-dev": {
        "classmap": [
            "tests/TestCase.php",
            "tests/stubs/ArticleStub.php",
            "tests/stubs/CommentStub.php",
            "tests/stubs/EpisodeStub.php"
        ]
    },
    "scripts": {
        "test": "vendor/bin/phpunit"
    },
    "config": {
        "sort-packages": true
    },
    "extra": {
        "laravel": {
            "providers": [
                "Usamamuneerchaudhary\\Commentify\\Providers\\CommentifyServiceProvider",
                "Usamamuneerchaudhary\\Commentify\\Providers\\MarkdownServiceProvider"
            ]
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
